/**product-detail.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* ‰∫ßÂìÅÂ™í‰Ωì */
.product-media {
  width: 100%;
  height: 500rpx;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.media-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.media-video {
  width: 100%;
  height: 100%;
}

/* Ëá™ÂÆö‰πâ swiper ÊåáÁ§∫ÁÇπÊ†∑Âºè */
.product-media .wx-swiper-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.4);
  margin: 0 8rpx;
  transition: all 0.3s ease;
}

.product-media .wx-swiper-dot-active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  width: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* ‰∫ßÂìÅ‰ø°ÊÅØ */
.product-info {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 0 0 24rpx 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.product-info::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
  border-radius: 0 0 24rpx 24rpx;
  z-index: -1;
}

.product-header {
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.8);
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.product-name {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  line-height: 1.3;
  letter-spacing: 0.5rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  align-self: flex-start;
}

.price-currency {
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 600;
}

.price-value {
  font-size: 52rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  margin-left: 8rpx;
}

.product-sku {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 12rpx;
  background: rgba(248, 250, 252, 0.8);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
  font-weight: 500;
}

.product-description {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: 'üìù';
  font-size: 28rpx;
  margin-right: 12rpx;
}

.description-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.7;
  background: rgba(248, 250, 252, 0.6);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid;
  border-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%) 1;
}

/* Áä∂ÊÄÅÊ†∑Âºè */
.loading-state,
.error-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #94a3b8;
  font-size: 28rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-state::before {
  content: '‚è≥';
  font-size: 48rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.error-state::before {
  content: '‚ùå';
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.error-state button {
  margin-top: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.error-state button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 